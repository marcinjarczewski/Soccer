<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - turnieje</title>
    <link href="~/lib/pikaday/css/pikaday.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/spin.js/spin.css" rel="stylesheet" />
    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />

    <link href="~/css/Theme.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />

</head>
<body>
    <!-- ko if: $data.globalModel -->
    <div data-bind="with: globalModel">
        <div data-bind="with:loginModel">
            <div data-bind="if:isLoggedIn">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/">Soccer</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                                </li>
                            </ul>
                            <form class="d-flex">
                                <a class="btn btn-outline-success" data-bind="click:logout">Logout</a>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>
            <div style="display:none;" data-bind="style: { display: isLoggedIn() ? 'none' : 'block' }">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/">Soccer</a>
                        <div>
                            <ul class="navbar-nav me-auto mb-12 mb-lg-12">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/login">
                                        <span data-bind="text:$parent.translations.login"></span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <button data-bind="click:$parent.changeLanguage.bind($data, 'pl')" class="btn btn-link">
                                        <img src="/images/pl.gif" alt="" width="30" height="20">
                                    </button>
                                    <button data-bind="click:$parent.changeLanguage.bind($data, 'en')" class="btn btn-link">
                                        <img src="/images/en.gif" alt="" width="30" height="20">
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div data-bind="with:globalModel">
        <div style="display:none" data-bind="visible:spinner" id="custom-spinner"></div>
    </div>
    <!-- /ko -->
    <div class="container body-content">
        @RenderBody()
        <div id="cookies-id" class="d-none">
            <h4 style="margin-top:10px;width:100%;color:white;text-align:center">
                <span id="cookie-line1"></span>
                <a style="color:#00a7ef;text-decoration-line:underline;" href="/polityka-prywatnosci">  <span id="cookie-line2"></span></a>
                <span id="cookie-line3"></span>
                <a id="cookiesOk" style="margin-bottom: 6px;background: white;" class="btn btn-round btn-round-success"><span id="cookie-line4"></span></a>
            </h4>
        </div>
    </div>
    <script type='module' src='~/lib/spin.js/spin.js'></script>
    <script type="module" src="~/js/helpers/spinnerWrapper.js" asp-append-version="true"></script>
    <script data-main="/js/requireConfig" src="~/lib/require.js/require.min.js" asp-append-version="true"></script>
    <script type="text/javascript">
        require(['requireConfig'], function () {
            require(['layout']);
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>