                            </div>
                            <!-- ko foreach: homePlayers -->
                            <div class="col-lg-12 col-md-12 row no-margin">
                                <div class="shadow card list-margin">
                                    <div>
                                        <table style="width:100%">
                                            <thead>
                                            </thead>
                                            <tr>
                                                <td><span data-bind="text: firstName() +' ' + nickName() + ' ' + lastName()"></span></td>
                                            </tr>
                                        </table>
                                    </div>
