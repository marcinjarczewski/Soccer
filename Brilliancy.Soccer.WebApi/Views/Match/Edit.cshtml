                                <div>
                                    <table style="width:100%">
                                        <thead>
                                        </thead>
                                        <tr>
                                            <td><span data-bind="text: firstName() +' ' + nickName() + ' ' + lastName()"></span></td>
                                            <td align="right">
                                                <a href="" data-bind="click:$root.selectScorer" class="btn btn-primary small-margin">
